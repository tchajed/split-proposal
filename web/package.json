{
	"name": "split-proposal-web",
	"private": true,
	"description": "frontend for split-proposal",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
